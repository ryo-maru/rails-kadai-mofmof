<div class="container">
  <h1>物件一覧</h1>
  <table>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  <% @houses.each do |house| %>
    <tr>
      <td><%= house.property_name %></td>
      <td><%= "#{house.rent}円" %></td>
      <td><%= house.address %></td>
      <td><%= "#{house.age}年" %></td>
      <td><%= house.note %></td>
      <td><%= link_to '詳細', house_path(house.id) %></td>
      <td><%= link_to '編集', edit_house_path(house.id) %></td>
      <td>
        <%= link_to '削除', house_path(house.id), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
      </td>
    </tr>
  <% end %>
  </table>
  <br><br>
  <%= link_to '物件を登録する', new_house_path %>
</div>
